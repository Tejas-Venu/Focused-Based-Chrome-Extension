{
  "manifest_version": 3,
  "name": "StayFocused",
  "version": "1.0",
  "description": "Block distracting sites for timed study sessions and reward you with a mini-game.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "alarms",
    "activeTab",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "StayFocused"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_blocker.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["break.html", "break.css", "break.js", "timer.html", "timer.js", "words.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
